---
// src/layouts/Layout.astro
import { ViewTransitions } from 'astro:transitions';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    
    <ViewTransitions /> 
    <style>
      /* Pastikan tema default adalah putih/terang */
      body {
        background-color: #f9f8fd; /* Setel ke brand-bg kita */
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
