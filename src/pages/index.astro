---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---
<Layout title="Situs Keren Saya">

  <section class="py-20 text-center bg-gradasi-lembut">
    <h1 class="text-5xl font-bold text-brand-teks">Situs Modern Anak Muda</h1>
    <p class="mt-4 text-xl text-brand-teks-subtle">Dibuat dengan Astro dan cinta.</p>
  </section>

  <main class="py-16 px-6 bg-brand-bg">
    <div class="container mx-auto">
      <h2 class="text-3xl font-semibold text-center text-brand-teks mb-12">
        Galeri Proyek
      </h2>

      <div class="
        grid
        grid-cols-1       md:grid-cols-2    lg:grid-cols-3    gap-8              ">
        
        <Card title="Proyek A" href="#">
          <img 
            slot="image" 
            src="/images/proyek-a.jpg" 
            alt="Proyek A" 
            class="w-full h-48 object-cover"
          />
          <p slot="content">Deskripsi singkat tentang proyek A yang sangat menarik.</p>
        </Card>

        <Card title="Proyek B" href="#">
          <img 
            slot="image" 
            src="/images/proyek-b.jpg" 
            alt="Proyek B" 
            class="w-full h-48 object-cover"
          />
          <p slot="content">Deskripsi singkat tentang proyek B yang inovatif.</p>
        </Card>

        <Card title="Proyek C" href="#">
          <img 
            slot="image" 
            src="/images/proyek-c.jpg" 
            alt="Proyek C" 
            class="w-full h-48 object-cover"
          />
          <p slot="content">Deskripsi singkat tentang proyek C yang keren.</p>
        </Card>

      </div>
    </div>
  </main>

</Layout>
